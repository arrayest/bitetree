<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    地区列表
    <small>地区列表</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-user"></i>地区列表</a></li>
    <li class="active">地区列表</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-12">
      <!-- general form elements -->
      <div class="box box-success">
        <div class="box-header with-border">
          <h3 class="box-title">地区</h3>
        </div><!-- /.box-header -->
        <%= search_form_for @q, url: admin_regions_path, class: "navbar-form", role: "search" do |f| %>
          <%= f.search_field :cities_name_cont, class: "form-control", placeholder: "城市" %>
          <%= submit_tag "搜索", class: "btn btn-default" %>
        <% end %>

        <!-- table start -->
        <table class="table table-bordered table-striped dataTable" role="grid">
          <thead>
            <tr>
              <th>省</th>
              <th>市</th>
            </tr>
          </thead>

          <tbody>
            <% @provinces.each do |province| %>
              <tr>
                <td><%= province.name %></td>
                <td>
                  <% province.cities.each do |city| %>
                    <%= link_to city.name, admin_region_path(city) %>
                  <% end %>
                </td>
              </tr>
            <% end %>
            <tr>
              <td style="text-align: center;" colspan="12">
                <%= paginate @provinces %>
              </td>
            </tr>
          </tbody>
        </table>
      </div><!-- /.box -->
    </div>
  </div>
</section>
