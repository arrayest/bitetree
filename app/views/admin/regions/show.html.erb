<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    城市区域
    <small>城市区域</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-user"></i>城市区域</a></li>
    <li class="active">城市区域</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-12">
      <!-- general form elements -->
      <div class="box box-success">
        <div class="box-header with-border">
          <h3 class="box-title">区域</h3>
        </div><!-- /.box-header -->
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <th style="width:10%">市</th>
                <th><%= @city.name %></th>
              </tr>
              <tr>
                <th>县</th>
                <th>乡镇</th>
              </tr>
              <% @city.districts.each do |district| %>
                <tr>
                  <td><%= district.name %></td>
                  <td>
                    <% district.streets.each do |street| %>
                      <span>
                      <%= street.name %>
                      </span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div><!-- /.box -->
    </div>
  </div>
</section>
