<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    账户设置
    <small>密码修改</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-user"></i>账户设置</a></li>
    <li class="active">密码修改</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-6">
      <!-- general form elements -->
      <div class="box box-success">
        <div class="box-header with-border">
          <h3 class="box-title">基本信息</h3>
        </div><!-- /.box-header -->
        <% if flash[:update] %>
          <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <p><%= flash[:update] %></p>
          </div>
        <% end %>
        <!-- form start -->
        <%= form_tag update_password_admin_user_path, method: :patch, multipart: true, role: "form" do %>
          <div class="box-body">
            <div class="form-group has-feedback">
              <label for="password">新密码</label>
              <%= password_field_tag :password, nil, autofocus: true, class: "form-control", placeholder: "新密码" %>
              <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
              <label for="password_confirmation">确认密码</label>
              <%= password_field_tag :password_confirmation, nil, class: "form-control", placeholder: "确认密码" %>
              <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            </div>
          </div>
          <div class="box-footer">
            <%= submit_tag "保存", class: "btn btn-success" %>
          </div>
        <% end %>
      </div><!-- /.box -->
    </div>
  </div>
</section>
