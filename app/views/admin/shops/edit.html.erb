<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    店铺详情
    <small>店铺详情</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-user"></i>店铺详情</a></li>
    <li class="active">店铺详情</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-6">
      <!-- general form elements -->
      <div class="box box-success">
        <div class="box-header with-border">
          <h3 class="box-title">店铺信息</h3>
          <%= link_to "返回", admin_shop_path, class: "btn btn-success pull-right" %>
        </div><!-- /.box-header -->
        <div class="box-body">
          <!-- form start -->
          <%= form_for @shop, url: admin_shop_path do |f| %>
            <div class="form-group">
              <label for="shop_name">店名</label>
              <%= f.text_field :name, required: true, class: "form-control", placeholder: "请输入店铺名" %>
            </div>
            <div class="form-group">
              <label for="shop_photo">店铺照片</label>
              <%= f.file_field :photo, required: true %>
              <p class="help-block">请上传一张店铺照片</p>
            </div>
            <div class="form-group">
              <label for="shop_hotline">热线</label>
              <%= f.text_field :hotline, required: true, class: "form-control", placeholder: "请输入热线电话" %>
            </div>
            <div class="form-group">
              <label for="shop_area">面积</label>
              <%= f.text_field :area, required: true, class: "form-control", placeholder: "请输入店铺面积" %>
            </div>
            <div class="form-group">
              <label for="shop_address">地址</label>
              <%= f.text_field :address, required: true, class: "form-control", placeholder: "请输入店铺地址" %>
            </div>
            <div class="form-group">
              <label for="shop_description">描述</label>
              <%= f.text_area :description, class: "form-control", placeholder: "描述" %>
            </div>
            <%= f.submit "提交", class: "btn btn-success" %>
          <% end %>
        </div>
        <div class="box-footer">
        </div>
      </div><!-- /.box -->
    </div>
  </div>
</section>
