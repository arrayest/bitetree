<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    店铺列表
    <small>店铺列表</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-user"></i>店铺列表</a></li>
    <li class="active">店铺列表</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-12">
      <!-- general form elements -->
      <div class="box box-success">
        <div class="box-header with-border">
          <h3 class="box-title">店铺</h3>
        </div><!-- /.box-header -->
        <%= search_form_for @q, url: admin_shops_path, class: "navbar-form", role: "search" do |f| %>
          <%= f.search_field :id_eq, class: "form-control", placeholder: "ID" %>
          <%= f.search_field :name_cont, class: "form-control", placeholder: "店铺名" %>
          <%= f.search_field :hotline_cont, class: "form-control", placeholder: "热线电话" %>
          <%= f.search_field :area_cont, class: "form-control", placeholder: "面积" %>
          <%= f.search_field :address_cont, class: "form-control", placeholder: "地址" %>
          <%= submit_tag "搜索", class: "btn btn-default" %>
        <% end %>

        <!-- table start -->
        <table class="table table-bordered table-striped dataTable" role="grid">
          <thead>
            <tr>
              <th>ID</th>
              <th>店铺名</th>
              <th>热线电话</th>
              <th>面积</th>
              <th>地址</th>
            </tr>
          </thead>

          <tbody>
            <% @shops.each do |shop| %>
              <tr>
                <td><%= link_to shop.id, admin_shop_path(shop) %></td>
                <td><%= shop.name %></td>
                <td><%= shop.hotline %></td>
                <td><%= shop.area %></td>
                <td><%= shop.address %></td>
              </tr>
            <% end %>
            <tr>
              <td style="text-align: center;" colspan="12">
                <%= paginate @shops %>
              </td>
            </tr>
          </tbody>
        </table>
      </div><!-- /.box -->
    </div>
  </div>
</section>
