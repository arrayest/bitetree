<body class="register-page">
  <div class="register-box">
    <div class="register-logo">
      <b>修改密码</b>
    </div>

    <div class="register-box-body">
      <p class="login-box-msg">修改密码</p>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.error_notification %>
        <div class="form-group has-feedback">
          <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control", placeholder: "密码" %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.password_field :password_confirmation, autocomplete: "off", required: true, class: "form-control", placeholder: "密码确认" %>
          <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
        </div>
        <div class="hide form-group has-feedback">
          <input type="text" class="form-control" placeholder="Full name"/>
          <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>

       <div class="row">
          <div class="col-xs-8">
            <div class="checkbox">
            </div>
          </div><!-- /.col -->
          <div class="col-xs-4">
            <%= f.submit "重置密码", class: "btn btn-primary btn-block btn-flat" %>
          </div><!-- /.col -->
        </div>
      <% end %>

      <div class="hide social-auth-links text-center">
        <p>- OR -</p>
        <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign up using Facebook</a>
        <a href="#" class="btn btn-block btn-social btn-google-plus btn-flat"><i class="fa fa-google-plus"></i> Sign up using Google+</a>
      </div>

      <%= link_to "登录", new_session_path(resource_name), class: 'text-center' %><br />
      <%= link_to "注册", new_registration_path(resource_name) %>
    </div><!-- /.form-box -->
  </div><!-- /.register-box -->
</body>
